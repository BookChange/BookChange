<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/denglu"

    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        />

    <EditText
        android:id="@+id/e_one"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="账号/手机号"
        android:phoneNumber="true"
        android:textSize="25dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   "
        android:textSize="15dp"
        />

    <EditText
        android:id="@+id/e_two"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:password="true"
        android:hint="密码         "
        android:textSize="25dp"
        android:layout_gravity="center"
        android:imeActionId="@+id/login"
        android:imeOptions="actionUnspecified"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"
        android:digits="@string/register_name_digits"/>
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   "
        android:textSize="15dp"
        />

    <Button
        android:id="@+id/b_one"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#3366CC"
        android:text="          登陆         "
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   "
        android:textSize="15dp"
        />

    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="250dp">

         <Button
             android:id="@+id/b_two"
             android:layout_width="150dp"
             android:layout_height="20dp"
             android:background="@android:color/transparent"
             android:text="     没有账户？点击注册"
             android:textColor="@drawable/button_font_style2"
         />

        <TextView
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="                     "
            android:textSize="15dp"/>

        <Button
            android:id="@+id/b_three"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:background="@android:color/transparent"
            android:text="忘记密码？"
            android:textColor="@drawable/button_font_style2"
            />
     </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="           点击登陆则代表同意"
            android:textColor="#FFFFFF"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/b_four"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:background="@android:color/transparent"
            android:text=" 《书来书往条款》"
            android:textColor="@drawable/button_font_style"
            />


    </LinearLayout>


</LinearLayout>
