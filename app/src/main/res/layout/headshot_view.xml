<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#3F51B5">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:text="返回"
            android:textColor="@drawable/button_head_back"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:background="#ffc0c3c4" />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:background="@android:color/white">

            <TextView
                android:id="@+id/copy_change_headshot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10.0dp"
                android:paddingBottom="8dip"
                android:paddingTop="8dip"
                android:text="更换头像"
                android:textColor="@android:color/black"
                android:textSize="19dp" />

            <Button
                android:id="@+id/change_headshot"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/copy_change_headshot"
                android:paddingBottom="8dip"
                android:background="@drawable/button_login_selector"
                android:text="                                                                 >" />

        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:background="#ffc0c3c4" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:background="#ffc0c3c4" />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingTop="8dip">

            <TextView
                android:id="@+id/copy_book_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10.0dp"
                android:paddingBottom="8dip"
                android:paddingTop="8dip"
                android:text="昵称"
                android:textColor="@android:color/black"
                android:textSize="19dp" />

            <EditText
                android:id="@+id/book_count"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/copy_book_count"
                android:background="@null"
                android:hint="原来的昵称，点击可变更"
                android:inputType="number"
                android:paddingTop="8dip" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:background="#ffc0c3c4" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:background="#ffc0c3c4" />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="100dip"
            android:layout_weight="1"
            android:paddingTop="8dip"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/copy_biography"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10.0dp"
                android:paddingBottom="8dip"
                android:paddingTop="8dip"
                android:text="简介："
                android:background="#00000000"
                android:textColor="@android:color/black"
                android:textSize="19dp" />

            <EditText
                android:id="@+id/biography"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/copy_biography"
                android:textCursorDrawable="@null"
                android:inputType="textMultiLine" />

        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:background="#ffc0c3c4" />


    </LinearLayout>
</LinearLayout>
