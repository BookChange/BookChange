<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#3F51B5"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:text="返回"
            android:textColor="@drawable/button_head_back"
            android:textSize="15sp"
            android:layout_gravity="right|center_vertical"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/menu"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/RelativeLayout"
                android:layout_width="fill_parent"
                android:layout_height="90dip"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image1Id"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="120dip"
                    android:background="#bfbfbf"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dip"
                    android:gravity="center"
                    android:paddingTop="45dp"
                    android:text="昵称"
                    android:textSize="16sp" />


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="1.0px"
                android:layout_marginRight="1.0px"
                android:background="#ffc0c3c4" />
            <Button
                android:id="@+id/complet_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_login_selector"
                android:text="信息完善                                                  >"
                android:textSize="19sp" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="1.0px"
                android:layout_marginRight="1.0px"
                android:background="#ffc0c3c4" />

            <Button
                android:id="@+id/complet_bookname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_login_selector"
                android:text="书名完善                                                  >"
                android:textSize="19sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="1.0px"
                android:layout_marginRight="1.0px"
                android:background="#ffc0c3c4" />
            <Button
                android:id="@+id/my_bookfriend"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_login_selector"
                android:text="我的书友                                                  >"
                android:textSize="19sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="1.0px"
                android:layout_marginRight="1.0px"
                android:background="#ffc0c3c4" />

            <Button
                android:id="@+id/my_reading"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_login_selector"
                android:text="正在读                                                      >"
                android:textSize="19sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="1.0px"
                android:layout_marginRight="1.0px"
                android:background="#ffc0c3c4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="1.0px"
                android:layout_marginRight="1.0px"
                android:background="#ffc0c3c4" />
            <Button
                android:id="@+id/setting_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_login_selector"
                android:text="设置                                                          >"
                android:textSize="19sp" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="1.0px"
                android:layout_marginRight="1.0px"
                android:background="#ffc0c3c4" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="1.0px"
                android:layout_marginRight="1.0px"
                android:background="#ffc0c3c4" />
            <Button
                android:id="@+id/customer_service"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_login_selector"
                android:gravity="left"
                android:paddingLeft="25dp"
                android:paddingTop="15dp"
                android:text="客服中心"
                android:textSize="17sp" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="1.0px"
                android:layout_marginRight="1.0px"
                android:background="#ffc0c3c4" />

            <Button
                android:id="@+id/about_us"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_login_selector"
                android:gravity="left"
                android:paddingLeft="25dp"
                android:paddingTop="15dp"
                android:text="关于"
                android:textSize="17sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="1.0px"
                android:layout_marginRight="1.0px"
                android:background="#ffc0c3c4" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginLeft="1.0px"
                android:layout_marginRight="1.0px"
                android:background="#ffc0c3c4" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingTop="15dip"
                android:paddingBottom="15dip"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/tab1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/tab1" />

                <ImageView
                    android:id="@+id/tab2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/tab2" />

                <ImageView
                    android:id="@+id/tab3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/tab3" />
            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>
